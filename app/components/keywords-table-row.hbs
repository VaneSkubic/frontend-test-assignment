<tr>
    <td class="query">
        <div class="query-flex">
            {{@keyword.query}}
            <span class="link">
                {{format-link @keyword.uri}}
            </span>
        </div>
    </td>
    <td id="position" class="number position">{{format-number @keyword.position}}</td>
    <td id="resultCount" class="number">{{format-number @keyword.resultCount}}</td>
    <td id="lastMonthChange" class="number">{{{color-number (format-number @keyword.lastMonthChange)}}}</td>
    <td id="searchVolume" class="number">{{format-number @keyword.searchVolume}}</td>
    <td id="competitorAverageRank" class="number">{{format-number @keyword.competitorAverageRank}}</td>
    <td id="bestCompetitorPosition" class="number">{{format-number @keyword.bestCompetitorPosition}}</td>
</tr>